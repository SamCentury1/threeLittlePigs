<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container">
        <div class="title pb-2">
            <h2 class="font-width-bold">Login</h2>
            <div class="login-options">
                <a href="dashboard">Existing User</a>
                <a href="create_account">Create Account</a>
                
            </div>
        </div>
        <form action="/api/users" method="POST" id="create_account" class="pt-3">
            <div class="form-group">
                <input type="username" class="form-control" placeholder="user name" name="username">
                <small class="form-text text-muted text-start">Pick a unique username!</small>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-start">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
                <small class="form-text text-muted text-start">Enter password</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password2" placeholder="password">
                <small class="form-text text-muted text-start">Re-enter password</small>
            </div>
            <button type="submit" class="btn btn-success rounded-pill" onclick="submitForm()">Create Account</button>
        </form>
    </div>
</div>

<%- include('footer') -%>