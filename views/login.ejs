<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container">
        <div class="title pb-2">
            <h2 class="font-width-bold">Login</h2>
            <div class="login-options">
                <a href="dashboard">Existing User</a>
                <a href="create_account">Create Account</a>
                
            </div>
        </div>
        <form action="/route/login" method="POST" id="login" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-start">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
                <small class="form-text text-muted text-start">Enter password</small>
            </div>
            

            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>

<%- include('footer') -%>