<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container">
        <div class="title pb-2">
            <h2 class="font-width-bold">Login System</h2>
            <span>Login for the existing user</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-start">Register email address</small>
            </div>
            <div class="form-group pb-2">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>

<%- include('footer') -%>